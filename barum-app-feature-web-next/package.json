{
  "name": "zauber-mono",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "client": "yarn workspace client dev",
    "api": "yarn workspace api start:dev",
    "website": "yarn workspace website dev",
    "web-next": "yarn workspace @barum/web-next dev",
    "init-db": "yarn workspace api migrate:dev && yarn workspace api seed",
    "start": "concurrently --kill-others-on-fail \"yarn api\" \"yarn client\" \"yarn website\"",
    "start-next": "concurrently --kill-others-on-fail \"yarn api\" \"yarn web-next\" \"yarn website\"",
    "lint-client": "yarn workspace client lint",
    "lint-api": "yarn workspace api lint",
    "lint-website": "yarn workspace website lint",
    "prettier-api": "yarn workspace api format",
    "prettier-client": "yarn workspace client format",
    "e2e-test-api": "yarn workspace api test:e2e",
    "clean": "rimraf packages/*/node_modules && rimraf node_modules",
    "reinstall": "yarn clean && yarn install",
    "email:dev": "yarn workspace api email dev -p 3001 --dir src/mail/email_templates"
  },
  "dependencies": {
    "@platejs/ai": "^49.0.1",
    "@platejs/basic-nodes": "^49.0.0",
    "@platejs/basic-styles": "^49.0.0",
    "@platejs/callout": "^49.0.0",
    "@platejs/code-block": "^49.0.0",
    "@platejs/comment": "^49.0.0",
    "@platejs/core": "^49.0.2",
    "@platejs/date": "^49.0.2",
    "@platejs/emoji": "^49.0.0",
    "@platejs/excalidraw": "^49.0.0",
    "@platejs/floating": "^49.0.0",
    "@platejs/layout": "^49.0.0",
    "@platejs/link": "^49.0.0",
    "@platejs/math": "^49.0.0",
    "@platejs/media": "^49.0.0",
    "@platejs/mention": "^49.0.0",
    "@platejs/slash-command": "^49.0.0",
    "@platejs/slate": "^49.0.2",
    "@platejs/suggestion": "^49.0.0",
    "@platejs/table": "^49.0.1",
    "@platejs/toggle": "^49.0.0",
    "@platejs/utils": "^49.0.2",
    "concurrently": "^8.2.2",
    "platejs": "^49.0.2",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "rimraf": "^5.0.5",
    "slate": "^0.117.0",
    "slate-react": "^0.117.1",
    "turbo": "^2.5.4"
  },
  "resolutions": {
    "@mantine/core": "7.12.1",
    "@mantine/form": "7.12.1",
    "@mantine/hooks": "7.12.1",
    "@tabler/icons-react": "2.44.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.3.3",
    "eslint": "8.53.0",
    "postcss": "8.4.32",
    "postcss-preset-mantine": "1.12.0",
    "postcss-simple-vars": "7.0.1",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.17",
    "nodemailer": "^6.9.7",
    "reflect-metadata": "^0.1.13",
    "webpack": "^5.89.0",
    "clsx": "^2.0.0",
    "prop-types": "^15.8.1"
  },
  "packageManager": "yarn@3.7.0",
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}
